<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:MyApp.Views">
    <Design.PreviewWith>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch">
            <Label Background="Blue" Foreground="White" Content="Assembly Explorer" HorizontalAlignment="Stretch" />
            <ScrollViewer HorizontalAlignment="Stretch" VerticalAlignment="Stretch" VerticalContentAlignment="Top">
                <TreeView>
                    <controls:TreeNodeControl NodeName="aaaa" Foreground="White"/>
                    <controls:TreeNodeControl NodeName="aadasda" />
                    <TextBlock Text="sdaskaaaaadba" Foreground="White" />
                </TreeView>
            </ScrollViewer>
        </StackPanel>
    </Design.PreviewWith>

    <Style Selector="controls|TreeNodeControl">
        <Setter Property="Template">
            <ControlTemplate>
                <TextBlock Text="{TemplateBinding NodeName}" Foreground="White" />
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>