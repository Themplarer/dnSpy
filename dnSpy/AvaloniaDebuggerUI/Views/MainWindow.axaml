<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:AvaloniaDebuggerUI.Views"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AvaloniaDebuggerUI.Views.MainWindow"
        Icon="/Assets/dnSpy.ico"
        Title="AvaloniaDebuggerUI">

    <DockPanel>
        <views:MenuView DockPanel.Dock="Top" />
        <Grid ColumnDefinitions="200,1,*">
            <views:AssemblyExplorerView Grid.Column="0" HorizontalContentAlignment="Left" />
            <GridSplitter Grid.Column="1" />
            <Border Background="Gray" Grid.Column="2" />
        </Grid>
    </DockPanel>

</Window>